<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p id="notice"><%= notice %></p>

      <h1>Listing Optics</h1>

      <table class="table table-hover table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          <th>Model</th>
          <th>Make</th>
          <th>Mag</th>
          <th>Price</th>
          <th>Due</th>
          <th>Active</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @optics.each do |optic| %>
            <tr>
              <td><%= optic.name %></td>
              <td><%= optic.model %></td>
              <td><%= optic.make.name %></td>
              <td><%= optic.mag %></td>
              <td><%= number_to_currency(optic.price) %></td>
              <td><%= optic.due.name %></td>
              <td><%= optic.active %></td>
              <td><%= link_to 'Show', optic, :class => "btn btn-small btn-info" %></td>
              <td><%= link_to 'Edit', edit_optic_path(optic), :class => "btn btn-small btn-success" %></td>
              <td><%= link_to 'Destroy', optic, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-small btn-success" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Optic', new_optic_path, :class => "btn btn-small btn-success" %>

    </div>
  </div>
</div>
