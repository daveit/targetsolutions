<div class="container">

  <div class="row">
    <div class="col-md-12">
      <h2>
        <strong>
          <%= @optic.name %>
        </strong>
      </h2>
    </div>
  </div>

  <hr>

  <div class="row">

    <div class="col-md-5">

      <p id="notice"><%= notice %></p>
      <p>
        <strong>Model:</strong>
        <%= @optic.model %>
      </p>

      <p>
        <strong>Details:</strong>
        <%= @optic.details %>
      </p>

      <p>
        <strong>Active:</strong>
        <%= @optic.active %>
      </p>

      <p>
        <strong>Due:</strong>
        <%= @optic.due.name %>
      </p>

      <p>
        <strong>Make:</strong>
        <%= @optic.make.name %>
      </p>
      <%= link_to 'Back', optics_path %>

    </div>


    <div class="col-md-5">

      <p>
        <%= image_tag @optic.image.url(:medium) %>
      </p>

    </div>

    <%= render 'layouts/sidebar' %>


  </div>

</div>