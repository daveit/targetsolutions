<%= simple_form_for(@optic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :make %>
    <%= f.input :model %>
    <%= f.input :mag %>
    <%= f.input :price %>
    <%= f.input :details %>
    <%= f.association :due %>
    <%= f.input :image %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-small btn-success" %>
  </div>
<% end %>
