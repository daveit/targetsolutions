<%= simple_form_for @photo, html: {multipart: true} do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :image_file_name %>
      <%= f.input :image_content_type %>
      <%= f.input :image_file_size %>
      <%= f.input :image %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
