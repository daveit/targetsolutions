<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p id="notice"><%= notice %></p>

      <h1>Listing Barrels</h1>

      <table class="table table-hover table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          <th>Make</th>
          <th>Model</th>
          <th>Twist</th>
          <th>Bore</th>
          <th>Due</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @barrels.each do |barrel| %>
            <tr>
              <td><%= barrel.name %></td>
              <td><%= barrel.make.name %></td>
              <td><%= barrel.model %></td>
              <td><%= barrel.twist %></td>
              <td><%= barrel.bore %></td>
              <td><%= barrel.due.name %></td>
              <td><%= image_tag barrel.image.url(:thumb) %></td>
              <td><%= link_to 'Show', barrel %></td>
              <td><%= link_to 'Edit', edit_barrel_path(barrel), :class => "btn btn-small btn-success" %></td>
              <td><%= link_to 'Destroy', barrel, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-small btn-danger" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Barrel', new_barrel_path, :class => "btn btn-small btn-success" %>

    </div>
  </div>
</div>
