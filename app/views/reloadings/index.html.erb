<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p id="notice"><%= notice %></p>

      <h1>Listing Reloadings</h1>

      <table class="table table-hover table-condensed">

        <thead>
        <tr>
          <th>Name</th>
          <th>Model</th>
          <th>Make</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Active</th>
          <th>Due</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @reloadings.each do |reloading| %>
            <tr>
              <td><%= reloading.name %></td>
              <td><%= reloading.model %></td>
              <td><%= reloading.make.name %></td>
              <td><%= reloading.quantity %></td>
              <td><%= number_to_currency(reloading.price) %></td>
              <td><%= reloading.active %></td>
              <td><%= reloading.due.name %></td>
              <td><%= link_to 'Show', reloading, :class => "btn btn-small btn-info" %></td>
              <td><%= link_to 'Edit', edit_reloading_path(reloading), :class => "btn btn-small btn-success" %></td>
              <td><%= link_to 'Destroy', reloading, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-small btn-success" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Reloading', new_reloading_path, :class => "btn btn-small btn-success" %>

    </div>
  </div>
</div>
