<%= simple_form_for @reloading, html: {multipart: true} do |f| %>

    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :model %>
      <%= f.association :make %>
      <%= f.input :quantity %>
      <%= f.input :price %>
      <%= f.input :details %>
      <%= f.association :due %>
      <%= f.input :active %>
      <%= f.input :image %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-small btn-success" %>
    </div>

<% end %>
