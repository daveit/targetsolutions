<div class="container">
  <div class="row">
    <div class='col-md-offset-2 col-md-6 content'>

      <p id="notice"><%= notice %></p>

      <h2>Listing Dues</h2>

      <table class="table table-hover table-condensed">

        <thead>
        <tr>
          <th>Name</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @dues.each do |due| %>
            <tr>
              <td><%= due.name %></td>
              <td><%= link_to 'Edit', edit_due_path(due), :class => "btn btn-small btn-success" %></td>
              <td><%= link_to 'Delete', due, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-small btn-danger" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <hr>

      <%= link_to 'New Due', new_due_path, :class => "btn btn-small btn-success" %>


    </div>
  </div>
</div>
