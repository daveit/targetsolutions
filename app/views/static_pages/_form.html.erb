<%= simple_form_for(@static_page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :shortcode %>
    <%= f.input :body %>
    <%= f.input :lefton, label: 'Left Sidebar?'  %>
    <%= f.input :left %>
    <%= f.input :righton, label: 'Right Sidebar?' %>
    <%= f.input :right %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
