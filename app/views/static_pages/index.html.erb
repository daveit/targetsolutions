<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p id="notice"><%= notice %></p>

      <h2>Listing Static Pages</h2>

      <table class="table table-hover table-condensed">

        <thead>
        <tr>
          <th>Name</th>
          <th>Shortcode</th>
          <th>Left Sidebar</th>
          <th>Right Sidebar</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @static_pages.each do |static_page| %>
            <tr>
              <td><%= static_page.name %></td>
              <td><%= static_page.shortcode %></td>
              <td><%= static_page.lefton %></td>
              <td><%= static_page.righton %></td>
              <td><%= link_to 'Show', static_page %></td>
              <td><%= link_to 'Edit', edit_static_page_path(static_page) %></td>
              <td><%= link_to 'Destroy', static_page, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Static page', new_static_page_path %>
    </div>
  </div>
</div>
