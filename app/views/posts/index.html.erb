<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p id="notice"><%= notice %></p>

      <h1>Posts / News Items</h1>

      <table class="table table-hover table-condensed">

        <thead>
        <tr>
          <th>Title</th>
          <th>Details</th>
          <th>Author</th>
          <th>Published</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.details %></td>
              <td><%= post.author %></td>
              <td><%= post.published %></td>
              <td><%= link_to 'Show', post %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Post', new_post_path %>

    </div>
  </div>
</div>
