<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p id="notice"><%= notice %></p>

      <h2>Listing Triggers</h2>

      <table class="table table-hover table-condensed">

        <thead>
        <tr>
          <th>Name</th>
          <th>Model</th>
          <th>Active</th>
          <th>Due</th>
          <th>Make</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @triggers.each do |trigger| %>
            <tr>
              <td><%= trigger.name %></td>
              <td><%= trigger.model %></td>
              <td><%= trigger.active %></td>
              <td><%= trigger.due %></td>
              <td><%= trigger.make %></td>
              <td><%= image_tag trigger.image.url(:thumb) %></td>
              <td><%= link_to 'Show', trigger, :class => "btn btn-small btn-info" %></td>
              <td><%= link_to 'Edit', edit_trigger_path(trigger), :class => "btn btn-small btn-success" %></td>
              <td><%= link_to 'Destroy', trigger, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-small btn-danger" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Trigger', new_trigger_path, :class => "btn btn-small btn-success" %>
    </div>
  </div>
</div>
