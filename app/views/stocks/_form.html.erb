<%= simple_form_for @stock, html: {multipart: true} do |f| %>

    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.association :make %>
      <%= f.input :model %>
      <%= f.input :inlet %>
      <%= f.input :colour %>
      <%= f.input :price %>
      <%= f.input :details %>
      <%= f.input :active %>
      <%= f.association :due %>
      <%= f.input :image %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
