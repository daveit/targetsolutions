<div class="container">

  <div class="row">
    <div class="col-md-12">
      <h2>
        <strong>
          <%= @stock.name %>
        </strong>
      </h2>
    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-md-5">


      <p id="notice"><%= notice %></p>

      <p>
        <strong>Make:</strong>
        <%= @stock.make.name %>
      </p>

      <p>
        <strong>Model:</strong>
        <%= @stock.model %>
      </p>
      <p>
        <strong>Inlet:</strong>
        <%= @stock.inlet %>
      </p>
      <p>
        <strong>Colour:</strong>
        <%= @stock.colour %>
      </p>
      <p>
        <strong>Price:</strong>
        <%= @stock.price %>
      </p>

      <p>
        <strong>Availability:</strong>
        <%= @stock.due.name %>
      </p>
      <hr>
      <p>
        <strong>Details:</strong><br>
        <%= @stock.details %>
      </p>
      <hr>
      <%= link_to 'Back', stocks_path, :class => "btn btn-success" %>
    </div>

    <div class="col-md-5">
      <p><%= image_tag @stock.image.url(:medium) %></p>
    </div

    <div class="col-md-2">
      <div class="btn-group-vertical" role="group">
        <%= link_to "Rifles & Actions", root_path, :class => "btn btn-success" %>
        <%= link_to "Barrels", root_path, :class => "btn btn-success" %>
        <%= link_to "Optics", root_path, :class => "btn btn-small btn-success" %>
        <%= link_to "Stocks", root_path, :class => "btn btn-small btn-success" %>
        <%= link_to "Archery", root_path, :class => "btn btn-small btn-success" %>
        <%= link_to "Triggers & Accesories", root_path, :class => "btn btn-small btn-success" %>
        <%= link_to "Miscellaneous", root_path, :class => "btn btn-small btn-success" %>
      </div>
    </div>

  </div>
</div>
