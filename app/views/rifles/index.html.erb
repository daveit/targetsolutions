<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p id="notice"><%= notice %></p>

      <h1>Listing Rifles & Actions</h1>

      <table class="table table-hover table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          <th>Make</th>
          <th>Model</th>
          <th>Style</th>
          <th>Calibre</th>
          <th>Price</th>
          <th>Due</th>
          <th>Active</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @rifles.each do |rifle| %>
            <tr>
              <td><%= rifle.name %></td>
              <td><%= rifle.make.name %></td>
              <td><%= rifle.model %></td>
              <td><%= rifle.style %></td>
              <td><%= rifle.bore %></td>
              <td><%= number_to_currency(rifle.price) %></td>
              <td><%= rifle.due.name %></td>
              <td><%= rifle.active %></td>
              <td><%= link_to 'Show', rifle, :class => "btn btn-small btn-info" %></td>
              <td><%= link_to 'Edit', edit_rifle_path(rifle), :class => "btn btn-small btn-success" %></td>
              <td><%= link_to 'Delete', rifle, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>
      <hr>
      <%= link_to 'New Rifle', new_rifle_path, :class => "btn btn-small btn-success" %>

    </div>
  </div>
</div>
