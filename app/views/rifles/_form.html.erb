<%= simple_form_for @rifle, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :make %>
    <%= f.input :model %>
    <%= f.input :style %>
    <%= f.input :bore, label: 'Calibre' %>
    <%= f.input :price %>
    <%= f.association :due %>
    <%= f.input :details %>
    <%= f.input :active %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-small btn-success" %>
  </div>
<% end %>