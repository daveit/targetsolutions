<div class="container">
  <div class="row">
    <div class="col-md-12">

      <p id="notice"><%= notice %></p>


      <p id="notice"><%= notice %></p>

      <h2>Listing Pre-loved's</h2>

      <table class="table table-hover table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          <th>Model</th>
          <th>Make</th>
          <th>Price</th>
          <th>Details</th>
          <th>Active</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @preloveds.each do |preloved| %>
            <tr>
              <td><%= preloved.name %></td>
              <td><%= preloved.model %></td>
              <td><%= preloved.make.name %></td>
              <td><%= number_to_currency(preloved.price) %></td>
              <td><%= preloved.details %></td>
              <td><%= preloved.active %></td>
              <td><%= link_to 'Show', preloved %></td>
              <td><%= link_to 'Edit', edit_preloved_path(preloved) %></td>
              <td><%= link_to 'Destroy', preloved, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>

      <%= link_to 'New Preloved', new_preloved_path, :class => "btn btn-small btn-success" %>

    </div>
  </div>
</div>
